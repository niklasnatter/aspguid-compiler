<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="rootNode" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aspguidp.controller.output.element.impl.{{- controllerName -}}">
   <children>
      <VBox minWidth="220.0" prefWidth="220.0" HBox.hgrow="NEVER">
         <children>
            {%- if (length(trim(title)) != 0) %}
            <Label text="{{- title -}}">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            {%- endif %}
            {%- if (length(trim(description)) != 0) %}
            <Label alignment="TOP_LEFT" text="{{- description -}}" wrapText="true" >
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </Label>
            {%- endif %}
            {%- for attribute in attributes %}
            {%- if (length(trim(attribute.getDescription())) != 0) %}
            <FlowPane prefHeight="0.0" prefWidth="0.0">
               <children>
                  <Label text="{{- attribute.getName() -}}: ">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  {%- for word in split(attribute.getDescription(), ' ') %}
                  <Label text="{{- word }} " />
                  {%- endfor %}
               </children>
            </FlowPane>
            {%- endif %}
            {%- endfor %}
         </children>
      </VBox>
      <ListView fx:id="entityList" styleClass="entity-list" minWidth="220.0" minHeight="80.0" prefHeight="0.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
   </children>
</HBox>
