<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootNode" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aspguidp.controller.input.element.impl.{{- controllerName -}}">
   <children>
      {%- if (length(trim(title)) != 0) %}
      <Label text="{{- title -}}">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      {%- endif %}
      <FlowPane prefHeight="0.0" prefWidth="0.0">
         <children>
            {%- for word in displayFormatParts %}
            {%- if (word.startsWith("::")) %}
            {%- set valueElement = valueElements[word.replaceAll("::","")] %}
            <AnchorPane prefWidth="100.0">
               <children>
                  <TextField fx:id="{{- valueElement.getIdentifier -}}BackgroundField" styleClass="validate-always" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                  <TextField fx:id="{{- valueElement.getIdentifier -}}InputField" text="{{- valueElement.getDefaultValue() -}}" styleClass="transparent-background" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
               <FlowPane.margin>
                  <Insets right="1.0" />
               </FlowPane.margin>
            </AnchorPane>
            {%- else %}
            <Label text="{{- word }}" />
            {%- endif %}
            {%- endfor %}
         </children>
      </FlowPane>
   </children>
</VBox>
